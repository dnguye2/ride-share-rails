<% if @trip.errors.any? %>
  <ul class="errors alert alert-danger" role="alert">
    <% @trip.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>


<%= form_with model: @trip, class: 'create-trip' do |f| %>

  <div class = "form-group">  
    <%= f.label :date, class: 'form-text'%>
    <%= f.text_field :date, placeholder: "Date", class: 'form-control'%>
  </div>

  <div class = "form-group">
    <%= f.label :driver_id %>
    <%= f.select :driver_id, Driver.all.map{ |driver| [driver.name, driver.id]} %>
  </div>

  <div class = "form-group">
    <%= f.label :passenger_id %>
    <%= f.select :passenger_id, Passenger.all.map{ |passenger| [passenger.name, passenger.id] } %>
  </div>

  <div class = "form-group">
    <%= f.label :rating, "Rating"%>
    <%= f.select :rating, [1, 2, 3, 4, 5], class: 'form-control' %>
  </div>

  <div class = "form-group">
    <%= f.label :cost, "Cost (in cents)"%>
    <%= f.text_field :cost, placeholder: "Cost", class: 'form-control' %>
  </div>

  <%= f.submit action_name, class: 'btn btn-secondary'%>
<% end %>
