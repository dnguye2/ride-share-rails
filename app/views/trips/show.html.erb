<h1 class="font-weight-light mt-4 d-flex justify-content-center">Trip Information</h1>

<div class="d-flex justify-content-center">
  <div class="card border-dark mb-3" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title"> Trip ID: <%= @trip.id %></h5>
            <td>Driver: <%= link_to @trip.driver.name, driver_path(@trip.driver_id) %></td>
            <br>
            <td>Passenger: <%= link_to @trip.passenger.name, passenger_path(@trip.passenger_id) %></td>
            <br>
            <td>Rating: <%= @trip.rating %></td>
            <br>
            <td> Cost: $<%= '%.2f' % (@trip.cost.to_i/100.0) %> </td>
            <br>
            <td>Date: <%= @trip.date %></td>

      <%= link_to "Edit LINK HERE", edit_passenger_path, :class=>"card-link" %>
      <br>
      <%= link_to "Delete LINK HERE", passenger_path, method: :delete, data: {confirm: "Are you sure you want to delete this passenger?"}, :class=>"card-link"%>
    </div>
  </div>
</div>