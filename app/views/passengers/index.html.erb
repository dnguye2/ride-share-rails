<main>
  <h1 class="font-weight-light mt-4">Passenger Directory</h1>
  <p class="lead text-black-50">Click on a passenger's name to view more information and add a new trip.</p>
  <% if @passengers.length > 0 %>
    <%= paginate @passengers %>
    <table class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
      <thead>
        <tr>
          <th scope="col", class="th-sm">ID</th>
          <th scope="col", class="th-sm">Name</th>
          <th scope="col", class="th-sm">Phone Number</th>
        </tr>
      </thead>
      <tbody>
          <% @passengers.each do |passenger|%>
          <tr>
            <th scope="row"> <%= passenger.id %> </th>
            <td><%= link_to passenger.name, passenger_path(passenger) %></td>
            <td><%= passenger.phone_num %></td>
          </tr>
          <% end %>
      </tbody>
  <% else %>
    <h3>No passengers in the system!</h3>
  <% end %>
  </table>
  <%= paginate @passengers %>
</main>

